<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>List of restaurants</h1>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
